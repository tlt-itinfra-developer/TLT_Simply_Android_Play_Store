<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_updating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:drawablePadding="@dimen/padding_small"
        android:drawableStart="@drawable/ic_updating"
        android:fontFamily="@font/custom_regular"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="@string/mycar_updating_status"
        android:textColor="@color/brownish_grey"
        android:textSize="@dimen/text_extra_small_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <tlt.th.co.toyotaleasing.view.TLTButtonWidget
        android:id="@+id/btn_check_unpayment"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="@dimen/margin_large"
        android:enabled="false"
        app:iconDrawable="@drawable/ic_checklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_updating"
        app:title="@string/btn_checking_payment_amount" />
</androidx.constraintlayout.widget.ConstraintLayout>