<!--                                            android:textColorHint="@color/text_hint"-->
<!--                                            android:textSize="@dimen/form_text_size"-->
<!--                                            android:layout_marginStart="@dimen/margin_small" />-->
<!--                                    </com.google.android.material.textfield.TextInputLayout>-->

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/dok_addr"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="*"
                                        android:textColor="@color/remark"
                                        android:textSize="@dimen/text_large_size"
                                        app:layout_constraintBottom_toBottomOf="@+id/text_address"
                                        app:layout_constraintStart_toStartOf="@+id/text_household_id"
                                        app:layout_constraintTop_toTopOf="@+id/edittext_current_address" />

                                    <tlt.th.co.toyotaleasing.view.OwaspEditText
                                        android:id="@+id/edittext_current_address"
                                        style="@style/Text_Bold_Large"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_normal"
                                        android:gravity="top"
                                        android:hint="@string/txt_personal_current_address"
                                        android:inputType="textMultiLine|textNoSuggestions"
                                        android:maxLines="4"
                                        android:maxLength="150"
                                        android:textColor="@color/brownish_grey"
                                        app:layout_constraintEnd_toStartOf="@+id/btn_geo"
                                        app:layout_constraintStart_toEndOf="@+id/dok_addr"
                                        app:layout_constraintTop_toBottomOf="@id/text_household_id" />


                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/btn_geo"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/icon_pin_map"
                                        app:layout_constraintBottom_toBottomOf="@+id/edittext_current_address"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="@+id/edittext_current_address" />



                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/dok_postcode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="*"
                                        android:textColor="@color/remark"
                                        android:textSize="@dimen/text_large_size"
                                        app:layout_constraintBottom_toBottomOf="@+id/text_postcode"
                                        app:layout_constraintStart_toStartOf="@+id/dok_addr"
                                        app:layout_constraintTop_toTopOf="@+id/text_postcode" />

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/text_postcode"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="@color/text_normal"
                                        android:textColorHint="@color/text_hint"
                                        app:layout_constraintTop_toBottomOf="@+id/edittext_current_address" >

                                        <tlt.th.co.toyotaleasing.view.OwaspEditText
                                            android:id="@+id/edittext_postcode"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="16dp"
                                            android:fontFamily="@font/custom_regular"
                                            android:hint="@string/txt_postcode"
                                            android:inputType="number"
                                            android:maxLines="1"
                                            android:maxLength="5"
                                            android:textColor="@color/text_normal"
                                            android:textColorHint="@color/text_hint"
                                            android:textSize="@dimen/form_text_size"
                                            android:layout_marginStart="@dimen/margin_small" />

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/dok_province"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="*"
                                        android:textColor="@color/remark"
                                        android:textSize="@dimen/text_large_size"
                                        app:layout_constraintBottom_toBottomOf="@+id/text_province"
                                        app:layout_constraintStart_toStartOf="@+id/dok_postcode"
                                        app:layout_constraintTop_toTopOf="@+id/text_province" />

                                    <LinearLayout
                                        android:id="@+id/text_province"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/dok_province"
                                        app:layout_constraintTop_toBottomOf="@+id/text_postcode">

                                        <tlt.th.co.toyotaleasing.view.SpinnerView
                                            android:id="@+id/spinner_province"
                                            style="@style/MySpinner"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/text_normal"
                                            android:textSize="@dimen/text_large_size"
                                            app:hint="@string/hint_province" />

                                    </LinearLayout>

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/dok_amphur"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:includeFontPadding="false"
                                        android:text="*"
                                        android:textColor="@color/remark"
                                        android:textSize="@dimen/text_large_size"
                                        app:layout_constraintBottom_toBottomOf="@+id/text_amphur"
                                        app:layout_constraintStart_toStartOf="@+id/dok_province"
                                        app:layout_constraintTop_toTopOf="@+id/text_amphur" />

                                    <LinearLayout
                                        android:id="@+id/text_amphur"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/dok_amphur"
                                        app:layout_constraintTop_toBottomOf="@+id/text_province">

