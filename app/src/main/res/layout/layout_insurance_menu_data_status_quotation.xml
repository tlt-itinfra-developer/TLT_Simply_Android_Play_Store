<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <tlt.th.co.toyotaleasing.view.LazyImageView
        android:id="@+id/btn_insurance_data"
        android:layout_width="@dimen/btn_insurance_size"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:imageResource="@drawable/ic_shileldcar"
        app:layout_constraintEnd_toStartOf="@id/btn_insurance_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_shileldcar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_insurance_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/insurance_btn_detail"
        android:textColor="@color/brownish_grey"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintEnd_toEndOf="@id/btn_insurance_data"
        app:layout_constraintStart_toStartOf="@id/btn_insurance_data"
        app:layout_constraintTop_toBottomOf="@id/btn_insurance_data" />

    <tlt.th.co.toyotaleasing.view.LazyImageView
        android:id="@+id/btn_insurance_status"
        android:layout_width="@dimen/btn_insurance_size"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:imageResource="@drawable/ic_checkform"
        app:layout_constraintEnd_toStartOf="@id/btn_insurance_quotation"
        app:layout_constraintStart_toEndOf="@id/btn_insurance_data"
        app:layout_constraintTop_toTopOf="@id/btn_insurance_data"
        tools:srcCompat="@drawable/ic_checkform" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_insurance_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/insurance_btn_status"
        android:textColor="@color/brownish_grey"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintEnd_toEndOf="@id/btn_insurance_status"
        app:layout_constraintStart_toStartOf="@id/btn_insurance_status"
        app:layout_constraintTop_toBottomOf="@id/btn_insurance_status" />

    <tlt.th.co.toyotaleasing.view.LazyImageView
        android:id="@+id/btn_insurance_quotation"
        android:layout_width="@dimen/btn_insurance_size"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:imageResource="@drawable/ic_edit_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_insurance_status"
        app:layout_constraintTop_toTopOf="@id/btn_insurance_data"
        tools:srcCompat="@drawable/ic_edit_email" />


    <!--    Update Simply p.2 by Sirivimon-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_insurance_quotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/custom_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/insurance_contactus_information"
        android:textColor="@color/brownish_grey"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintEnd_toEndOf="@id/btn_insurance_quotation"
        app:layout_constraintStart_toStartOf="@id/btn_insurance_quotation"
        app:layout_constraintTop_toBottomOf="@id/btn_insurance_quotation" />

