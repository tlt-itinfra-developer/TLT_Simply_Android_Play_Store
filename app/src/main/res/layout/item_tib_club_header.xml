<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <tlt.th.co.toyotaleasing.view.LazyImageView
            android:id="@+id/img_tib_header_club_tib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:imageResource="@drawable/bg_tib_banner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/bg_tib_banner" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_tib_header_club_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:fontFamily="@font/custom_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            tools:text="โตโยต้า อินชัวรันซ์ โบรกเกอร์ ได้รังสรรค์ขึ้น เพื่อ
ตอบแทนลูกค้าที่ ต่อประกันภัยรถยนต์กับเรา
ด้วยกิจกรรมความสนุกที่ตอบโจทย์ทุกไลฟ์สไตล์
ภายใต้คอนเซ็ปท์ Enjoy Happiness กับกิจกรรม
ความสนุกสุดจี๊ด สุดโดน! ที่หมุนเวียนตลอดทุกเดือน
อีกทั้งสิทธิพิเศษและส่วนลดร้านค้าดังทั่วประเทศ
อัพเดทความสนุกกับเราได้ที่นี่
หรือ แอดไลน์เพื่อไม่พลาดทุกข่าวสาร จาก @tibclub     "
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/text_medium_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_tib_header_club_tib" />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tib_header_club_detail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>