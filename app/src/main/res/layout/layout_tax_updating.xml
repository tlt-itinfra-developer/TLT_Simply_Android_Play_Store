<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_margin="@dimen/margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="26dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tax_update_txt_payment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_regular"
            android:includeFontPadding="false"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_small_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="11 ม.ค. 2561" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tax_update_title_no_have_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_bold"
            android:includeFontPadding="false"
            android:text="@string/tax_no_have_payment"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/text_large_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tax_update_txt_payment_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_updating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:drawableStart="@drawable/ic_updating"
            android:drawablePadding="@dimen/padding_small"
            android:fontFamily="@font/custom_regular"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/tax_updating_payment_title"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/text_small_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tax_update_title_no_have_payment" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>