<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <tlt.th.co.toyotaleasing.view.DrawableTextViewWidget
        android:id="@+id/title_behind_in_payment_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:iconDrawable="@drawable/ic_bookmark"
        app:layout_constraintEnd_toStartOf="@id/txt_behind_in_payment_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ค่างวดที่ค้างชำระเดือน ม.ค." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_behind_in_payment_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/custom_bold"
        android:gravity="end"
        android:includeFontPadding="false"
        android:textColor="@color/text_disable"
        android:textSize="@dimen/car_contract_text_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_behind_in_payment_header"
        app:layout_constraintTop_toTopOf="@id/title_behind_in_payment_header"
        tools:text="10,608.00 บาท" />
</androidx.constraintlayout.widget.ConstraintLayout>