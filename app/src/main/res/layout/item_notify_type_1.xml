<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_notify_type_1"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_notify_type_1_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_normal"
        android:fontFamily="@font/custom_bold"
        android:includeFontPadding="false"
        android:textColor="@color/text_disable"
        android:textSize="@dimen/text_medium_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_notify_type_1"
        app:layout_constraintTop_toTopOf="@id/ic_notify_type_1"
        tools:text="กำหนดชำระค่างวดของท่าน ทะเบียน กต-1528 วันที่ 11 ม.ค. 2561 จำนวน 22,997.00 บาท" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_notify_type_1_datetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/custom_regular"
        android:includeFontPadding="false"
        android:textColor="@color/text_disable"
        android:textSize="@dimen/text_small_size"
        app:layout_constraintStart_toStartOf="@id/txt_notify_type_1_detail"
        app:layout_constraintTop_toBottomOf="@id/txt_notify_type_1_detail"
        tools:text="11 ก.พ.61 - 11.45 น." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_notify_type_1_more"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@id/txt_notify_type_1_datetime"
        app:layout_constraintEnd_toEndOf="@id/txt_notify_type_1_detail"
        app:layout_constraintTop_toTopOf="@id/txt_notify_type_1_datetime"
        app:srcCompat="@drawable/ic_more" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_notify_type_1_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/btn_green_light"
        android:fontFamily="@font/custom_bold"
        android:gravity="center"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:text="@string/notify_btn_see_more"
        android:textColor="@drawable/selector_text_normal"
        android:textSize="@dimen/text_medium_size"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/btn_notify_type_1_more"
        app:layout_constraintTop_toBottomOf="@id/btn_notify_type_1_more"
        tools:visibility="visible" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/unactive"
        app:layout_constraintEnd_toEndOf="@id/txt_notify_type_1_detail"
        app:layout_constraintStart_toStartOf="@id/txt_notify_type_1_datetime"
        app:layout_constraintTop_toBottomOf="@id/btn_notify_type_1_see_more" />
</androidx.constraintlayout.widget.ConstraintLayout>